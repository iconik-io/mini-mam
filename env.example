# Flask Microservice Framework Environment Configuration

# Flask Environment
FLASK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/microservices_db

# PostgreSQL Connection Parameters (used by individual services)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Service URLs (for inter-service communication)
ASSETS_SERVICE_URL=http://localhost:8001
FILES_SERVICE_URL=http://localhost:8002
TRANSCODE_SERVICE_URL=http://localhost:8003
SEARCH_SERVICE_URL=http://localhost:8004

# Service Ports
API_GATEWAY_PORT=8000
ASSETS_SERVICE_PORT=8001
FILES_SERVICE_PORT=8002
TRANSCODE_SERVICE_PORT=8003
SEARCH_SERVICE_PORT=8004

# Service Metrics Ports
API_GATEWAY_METRICS_PORT=9090
ASSETS_SERVICE_METRICS_PORT=9091
FILES_SERVICE_METRICS_PORT=9092
TRANSCODE_SERVICE_METRICS_PORT=9094
SEARCH_SERVICE_METRICS_PORT=9093

# File Storage Configuration
OUTPUT_FOLDER=./transcoded
TEMP_FOLDER=./temp

# S3 Configuration (for AWS S3 or other S3-compatible services)
S3_BUCKET=mini-mam-files
S3_REGION=us-east-1
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_ENDPOINT_URL=https://s3.amazonaws.com  # Use https://s3.amazonaws.com for AWS S3

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Authentication
ADMIN_PASSWORD=your-admin-password
USER_PASSWORD=your-user-password

# Prometheus Metrics
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Frontend Configuration (optional)
REACT_APP_API_URL=  # Leave empty for host-relative URLs 